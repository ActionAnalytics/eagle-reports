[{"$match": {"_schemaName": {"$eq": "Document"}}}
,{"$project": { 
    "isTagged":{ "$cond": { "if": { "$and": 
        [
            { "$ne": [ "$documentType", "" ] }
            ,{ "$ne": [ "$documentType", null ] }
            ,{ "$ne": [ "$milestone", "" ] }
            ,{ "$ne": [ "$milestone", null ] }
            ,{ "$ne": [ "$documentAuthor", "" ] }
            ,{ "$ne": [ "$documentAuthor", null ] }
        ]},
        "then": "Tagged",
        "else": "Untagged"
        }}
    }}
,{"$group":{"_id":"$isTagged","count":{"$sum":1}}}
,{ "$project": {
    "_id":0
    ,"status": "$_id"
    ,"count":"$count"
    }}
]